{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "projectName": {
      "type": "string"
    },
    "eventHubName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Event Hub"
      }
    },
    "environment": {
      "type": "string",
      "metadata": {
        "description": "Environment name, like dev, test etc.."
      }
    }
  },
  "variables": {
    "configuration": {
      "projectName": "[parameters('projectname')]",
      "owner": "dutchazuremeetup",
      "costCenter": "AB1234",
      "businessUnit": "meetup",
      "environment": "[parameters('environment')]"
    }
  },
  "resources": [
    {
      "apiVersion": "2015-01-01",
      "name": "EventHub",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          //Dit must be a public url (in Linked template local file system is not supported)
          "uri": "https://raw.githubusercontent.com/DutchAzureMeetup/BigDataIngestion1/feature/AzureButton/src/AzureInfrastructure/Microsoft.Eventhub/azuredeploy.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "configuration": {
            "value": "[variables('configuration')]"
          },
          "eventHubName": {
            "value": "[parameters('eventHubName')]"
          }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "StorageAccount",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          //Dit must be a public url (in Linked template local file system is not supported)
          "uri": "https://raw.githubusercontent.com/DutchAzureMeetup/BigDataIngestion1/feature/AzureButton/src/AzureInfrastructure/Microsoft.Storage/azuredeploy.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "configuration": {
            "value": "[variables('configuration')]"
          }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "ServiceBus",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          //Dit must be a public url (in Linked template local file system is not supported)
          "uri": "https://raw.githubusercontent.com/DutchAzureMeetup/BigDataIngestion1/feature/AzureButton/src/AzureInfrastructure/Microsoft.ServiceBus/azuredeploy.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "configuration": {
            "value": "[variables('configuration')]"
          }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "StreamAnalytics",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          //Dit must be a public url (in Linked template local file system is not supported)
          "uri": "https://raw.githubusercontent.com/DutchAzureMeetup/BigDataIngestion1/feature/AzureButton/src/AzureInfrastructure/Microsoft.StreamAnalytics/azuredeploy.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "configuration": {
            "value": "[variables('configuration')]"
          },
          "eventHubNamespace": {
            "value": "[reference('EventHub').outputs.NamespaceName.value]"
          },
          "sharedAccessPolicyName": {
            "value": "[reference('EventHub').outputs.DefaultSASKeyName.value]"
          },
          "eventHubName": {
            "value": "[parameters('eventHubName')]"
          },
          "consumerGroupName": {
            "value": "[reference('EventHub').outputs.ConsumerGroupName.value]"
          },
          "storageAccountName": {
            "value": "[reference('StorageAccount').outputs.StorageAccountName.value]"
          },
          "serviceBusNamespace": {
            "value": "[reference('ServiceBus').outputs.serviceBusNamespaceName.value]"
          },
          "serviceBusTopicName": {
            "value": "[reference('ServiceBus').outputs.Topic.value.Name]"
          },
          "serviceBuTopicPolicyName": {
            "value": "[reference('ServiceBus').outputs.serviceBusdefaultSASKeyName.value]"
          },
          "serviceBusTopicPolicyKey": {
            "value": "[reference('ServiceBus').outputs.Topic.value.TopicSenderKey.Key]"
          }
        }
      }
    },
    { // App Plan
      "apiVersion": "2015-01-01",
      "name": "AppPlan",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/DutchAzureMeetup/BigDataIngestion1/feature/AzureButton/src/AzureInfrastructure/Microsoft.Web/azuredeploy-plan.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "configuration": {
            "value": "[variables('configuration')]"
          }
        }
      }
    },
    {
      //Web App
      "apiVersion": "2015-01-01",
      "name": "WebApp",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/DutchAzureMeetup/BigDataIngestion1/feature/AzureButton/src/AzureInfrastructure/Microsoft.Web/azuredeploy-webapp.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "configuration": {
            "value": "[variables('configuration')]"
          },
          "serverFarmName": {
            "value": "[reference('AppPlan').outputs.ServerFarmName.value]"
          },
          "sbManageConnectionString": {
            "value": "[reference('ServiceBus').outputs.serviceBusNamespaceConnectionString.value]"
          },
          "topicName": {
            "value": "[reference('ServiceBus').outputs.Topic.value.Name]"
          },
          "subscriptionName": {
            "value": "[reference('ServiceBus').outputs.Topic.value.Subscriptions[0].name]"
          }
        }
      }
    }
  ],
  "outputs": {}
}
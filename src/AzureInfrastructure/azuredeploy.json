{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "configuration": {
      "type": "object"
    },
    "eventHubName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Event Hub"
      }
    }
  },
  "variables": {
  },
  "resources": [
    {
      "apiVersion": "2015-01-01",
      "name": "EventHub",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          //Dit must be a public url (in Linked template local file system is not supported)
          "uri": "https://raw.githubusercontent.com/DutchAzureMeetup/BigDataIngestion1/develop/src/AzureInfrastructure/Microsoft.Eventhub/azuredeploy.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "configuration": {
            "value": "[parameters('configuration')]"
          },
          "eventHubName": {
            "value": "[parameters('eventHubName')]"
          }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "StorageAccount",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          //Dit must be a public url (in Linked template local file system is not supported)
          "uri": "https://raw.githubusercontent.com/DutchAzureMeetup/BigDataIngestion1/feature/marco/src/AzureInfrastructure/Microsoft.Storage/azuredeploy.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "configuration": {
            "value": "[parameters('configuration')]"
          }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "StreamAnalytics",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          //Dit must be a public url (in Linked template local file system is not supported)
          "uri": "https://raw.githubusercontent.com/DutchAzureMeetup/BigDataIngestion1/feature/marco/src/AzureInfrastructure/Microsoft.StreamAnalytics/azuredeploy.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "configuration": {
            "value": "[parameters('configuration')]"
          },
          "serviceBusNamespace": {
            "value": "[reference('EventHub').outputs.NamespaceName.value]"
          },
          "sharedAccessPolicyName": {
            "value": "[reference('EventHub').outputs.DefaultSASKeyName.value]"
          },
          "eventHubName": {
            "value": "[parameters('eventHubName')]"
          },
          "consumerGroupName": {
            "value": "[reference('EventHub').outputs.ConsumerGroupName.value]"
          },
          "storageAccountName": {
            "value": "[reference('StorageAccount').outputs.StorageAccountName.value]"
          }
        }
      }
    }
  ],
  "outputs": {
  }
}

{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "configuration": {
      "type": "object"
    },
    "serviceBusNamespace": {
      "type": "string"
    },
    "sharedAccessPolicyName": {
      "type": "string"
    },
    "sharedAccessPolicyKey": {
      "type": "string"
    },
    "eventHubName": {
      "type": "string"
    },
    "consumerGroupName": {
      "type": "string"
    },
    "storageAccountName": {
      "type": "string"
    }
  },
  "variables": {
    "streamAnalyticsName": "[concat(parameters('configuration').projectName,'-sa-',parameters('configuration').environment)]"
  },
  "resources": [
    {
      "apiVersion": "2015-06-01",
      "name": "[variables('streamAnalyticsName')]",
      "type": "Microsoft.StreamAnalytics/streamingjobs",
      "location": "[resourceGroup().location]",
      "tags": {
        "projectName": "[parameters('configuration').projectName]",
        "owner": "[parameters('configuration').owner]",
        "costCenter": "[parameters('configuration').costCenter]",
        "businessUnit": "[parameters('configuration').businessUnit]",
        "environment": "[parameters('configuration').environment]"
      },
      "properties": {
        "sku": {
          "name": "Standard"
        },
        "EventsLateArrivalMaxDelayInSeconds": 1728000,
        "eventsOutOfOrderMaxDelayInSeconds": 1800,
        "EventsOutOfOrderPolicy": "Adjust",
        "inputs": [
          {
            "name": "encp4standeningestion",
            "type": "Microsoft.StreamAnalytics/streamingjobs/inputs",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-01",
            "properties": {
              "type": "stream",
              "serialization": {
                "type": "JSON",
                "properties": {
                  "encoding": "UTF8"
                }
              },
              "datasource": {
                "type": "Microsoft.ServiceBus/EventHub",
                "properties": {
                  "serviceBusNamespace": "[parameters('serviceBusNamespace')]",
                  "sharedAccessPolicyName": "[parameters('sharedAccessPolicyName')]",
                  "sharedAccessPolicyKey": "[listkeys(resourceId('Microsoft.Eventhub/namespaces/authorizationRules', [parameters('serviceBusNamespace')], [parameters('sharedAccessPolicyKey')], '2014-09-01').primaryKey]",
                  "eventHubName": "[parameters('eventHubName')]",
                  "consumerGroupName": "[parameters('consumerGroupName')]"
                }
              }
            }
          }
        ],
        "transformation": {
          "name": "encp4standeningestionquery",
          "properties": {
            "streamUnits": 1,
            "query": "SELECT EAN        \r\n,      DT         \r\n,      TYPE       \r\n,      INS_DT     \r\n,      ID         \r\n,      MTR        \r\n,      RLE        \r\n,      ACT        \r\n,      LCE        \r\n,      P_TYPE     \r\n,      HERKOMST   \r\n,      SENT_TO_MVS\r\n,      STAND_P    \r\n,      STAND_OP   \r\n,      STAND_TOT  \r\n,      STAND_T_P  \r\n,      STAND_T_OP \r\n,      STAND_T_TOT\r\nINTO   [encp4standeningestionbloboutput]\r\nFROM   [encp4standeningestion] TIMESTAMP BY EventEnqueuedUtcTime\r\n                               PARTITION BY PartitionId\r\n;"
          }
        },
        "outputs": [
          {
            "name": "encp4standeningestionbloboutput",
            "properties": {
              "Serialization": {
                "type": "CSV",
                "properties": {
                  "Encoding": "UTF8",
                  "FieldDelimiter": "|"
                }
              },
              "datasource": {
                "type": "Microsoft.Storage/Blob",
                "properties": {
                  "StorageAccounts": [
                    {
                      "AccountKey": "[listKeys(resourceId(resourceGroup().name,'Microsoft.Storage/storageAccounts',parameters('storageAccountName')),'2016-01-01').keys[0].value]",
                      "AccountName": "[parameters('storageAccountName')]"
                    }
                  ],
                  "Container": "fromeventhub",
                  "pathPattern": "thermostatdata/fdate={date}/{time}",
                  "dateFormat": "yyyy-MM-dd",
                  "timeFormat": "HH"
                }
              }
            }
          }
        ]
      }
    }
  ],
  "outputs": {}
}

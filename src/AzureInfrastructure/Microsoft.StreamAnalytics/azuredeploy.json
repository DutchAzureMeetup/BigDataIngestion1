{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "configuration": {
      "type": "object"
    },
    "serviceBusNamespace": {
      "type": "string"
    },
    "sharedAccessPolicyName": {
      "type": "string"
    },
    "eventHubName": {
      "type": "string"
    },
    "consumerGroupName": {
      "type": "string"
    },
    "storageAccountName": {
      "type": "string"
    }
  },
  "variables": {
    "streamAnalyticsName": "[concat(parameters('configuration').projectName,'-sa-',parameters('configuration').environment)]"
  },
  "resources": [
    {
      "apiVersion": "2016-03-01",
      "name": "[variables('streamAnalyticsName')]",
      "type": "Microsoft.StreamAnalytics/StreamingJobs",
      "location": "[resourceGroup().location]",
      "tags": {
        "projectName": "[parameters('configuration').projectName]",
        "owner": "[parameters('configuration').owner]",
        "costCenter": "[parameters('configuration').costCenter]",
        "businessUnit": "[parameters('configuration').businessUnit]",
        "environment": "[parameters('configuration').environment]"
      },
      "properties": {
        "sku": {
          "name": "Standard"
        },
        "outputErrorPolicy": "stop",
        "eventsOutOfOrderPolicy": "adjust",
        "eventsOutOfOrderMaxDelayInSeconds": 0,
        "eventsLateArrivalMaxDelayInSeconds": 5,
        "dataLocale": "en-US",
        "inputs": [
          {
            "name": "thermostatingestion",
            "type": "Microsoft.StreamAnalytics/streamingjobs/inputs",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-01",
            "properties": {
              "type": "stream",
              "serialization": {
                "type": "JSON",
                "properties": {
                  "encoding": "UTF8"
                }
              },
              "datasource": {
                "type": "Microsoft.ServiceBus/EventHub",
                "properties": {
                  "serviceBusNamespace": "[parameters('serviceBusNamespace')]",
                  "sharedAccessPolicyName": "[parameters('sharedAccessPolicyName')]",
                  "sharedAccessPolicyKey": "[listkeys(resourceId('Microsoft.Eventhub/namespaces/authorizationRules', parameters('serviceBusNamespace'), parameters('sharedAccessPolicyName')), '2014-09-01').primaryKey]",
                  "eventHubName": "[parameters('eventHubName')]",
                  "consumerGroupName": "[parameters('consumerGroupName')]"
                }
              }
            }
          }
        ],
        "transformation": {
          "name": "encp4standeningestionquery",
          "properties": {
            "streamingUnits": 3,
            "query": "SELECT *\r\nINTO   [thermostatingestionbloboutput]\r\nFROM   [thermostatingestion]\r\nPARTITION BY PartitionId;"
          }
        },
        "outputs": [
          {
            "name": "thermostatingestionbloboutput",
            "properties": {
              "Serialization": {
                "type": "CSV",
                "properties": {
                  "Encoding": "UTF8",
                  "FieldDelimiter": "|"
                }
              },
              "datasource": {
                "type": "Microsoft.Storage/Blob",
                "properties": {
                  "StorageAccounts": [
                    {
                      "AccountKey": "[listKeys(resourceId(resourceGroup().name,'Microsoft.Storage/storageAccounts',parameters('storageAccountName')),'2016-01-01').keys[0].value]",
                      "AccountName": "[parameters('storageAccountName')]"
                    }
                  ],
                  "Container": "fromeventhub",
                  "pathPattern": "thermostatdata/fdate={date}/{time}",
                  "dateFormat": "yyyy-MM-dd",
                  "timeFormat": "HH"
                }
              }
            }
          }
        ]
      }
    }
  ],
  "outputs": {}
}
